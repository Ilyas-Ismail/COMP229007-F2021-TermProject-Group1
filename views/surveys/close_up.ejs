<%- include ../partials/header.ejs %>

<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

                <div class="form-group">

                    <h2>Survey Title: <%= survey.Title %></h2>
                </div>
                <br/>
                <br/>
                <br/>
                <!-- double for-loop starts -->
                <% for(let i = 0; i < survey.Questions.length; i++) { %>
                <div class="form-group">
                    <!-- print out questions -->
                    <h5>Q: <%= survey.Questions[i] %></h4>
                </div>
                <br/>
                <div class="container">
                <% for(let j = 0; j < survey.Choices[i].length; j++) { %>
                <div class="form-group">
                    <!-- print out choices -->
                    <input type="radio" id="choice<%= i %><%= j %>" name="choice<%= i %>" value="<%= j %>">
                    <label for="choice<%= i %><%= j %>">
                        <%= survey.Choices[i][j] %>
                    </label>
                </div>
                <br />
                <% } %>
                </div>
                <br/>
                <% } %>
                <!-- Send nothing! because this is not a real surveying site lol -->
                <a href="/surveys/list" class="btn btn-primary">
                    <i class="fas fa-edit"></i>
                    Submit
                </a>
                <!-- Return to the survey list -->
                <a href="/surveys/list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> 
                    Return
                </a>

            </form>
        </div>

    </div>
</div>

<%- include ../partials/footer.ejs %>