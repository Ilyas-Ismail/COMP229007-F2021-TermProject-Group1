<div class ="container">
    <div class ="row">
        <div class = "offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <h1>Please choose the type of survey you would like to create</h1>

            <form class="form" method="POST">


                
                <div class="form-group">
                    <input type="hidden" 
                        name="id" 
                        value="<%= ._id %>"
                    >
                    </div>
                <div class="form-group">
                    <label for="surveyNameTextField">Survey Name</label>
                    <input type="surveyName" 
                        class="form-control" 
                        id="surveyNameTextField" 
                        placeholder="0" 
                        name="surveyName" 
                        value="<%= survey.name %>"
                        required>
                </div>
                <div class="form-group">
                    <label for="surveyTypeDropdown"></label>

                        <select 
                            class="form-select"
                            id="surveyTypeDropdown"
                            name="surveyType"
                            aria-label="Default select example">
                        <option selected>Open this select menu</option>
                        <option value="1">Multiple Choice</option>
                        <option value="2">Short Answer</option>
                    </select>
                </div>
              
    
                
                <br>
                <!-- Input Buttons -->
                <button class="btn btn-dark" type="submit"> <i class="fas fa-edit"></i>Create Survey</button>
                <a class="btn btn-warning" href ="/surveys/add_edit" > <i class="fas fa-undo"></i>Cancel</a>
